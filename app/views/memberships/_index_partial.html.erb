<div class="apple_pagination">
<!-- render page links in the view: -->
<%= will_paginate @memberships %>
</div>
<table class="show-table table table-bordered table-striped table-hover">
  <tr>
    <th>Member</th>
    <th>Level</th>
    <% if can? :edit, @memberships %>
    <th></th>
    <% end %>
    <% if can? :destroy, @memberships %>
    <th></th>
    <% end %>
  </tr>

<% @memberships.each do |membership| %>
  <tr>
    <td><%= membership.member.name %></td>
    <td><%= membership.level %></td>
    <% if can? :edit, membership %>
    <td>
      <%= link_to 'Edit', edit_group_membership_path(current_group, membership) %>
    </td>
    <% end %>
    <% if can? :destroy, membership %>
      <td>
      <%= link_to 'Destroy', [current_group, membership], :confirm => 'Are you sure?', :method => :delete %>
     </td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<div class="apple_pagination">
<!-- render page links in the view: -->
<%= will_paginate @memberships %>
</div>
