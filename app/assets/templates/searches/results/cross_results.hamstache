%table.show-table.table.table-bordered.table-striped.table-hover
  %thead
    %tr
      {{#headers}}
      {{#cross_property}}
      %th {{cross_property}}
      {{/cross_property}}
      {{#cross_value}}
      %th {{cross_value}}
      {{/cross_value}}
      {{/headers}}
      {{#header.count}}
      %th {{header.count}}
      {{/header.count}}
  %tbody
    {{#rows}}
    %tr{:id => "{{pair_id}}", :data => {"property-value" => "{{property_value}}" }}
      {{#pair}}
      {{#cross_property}}
      %td {{cross_property}}
      {{/cross_property}}
      {{#cross_value}}
      %td {{cross_value}}
      {{/cross_value}}
      {{/pair}}
      {{#count}}
      %td
        %a{:href => '#', :id=> "lings_cross_{{count.index}}"} {{count.text}}
      {{/count}}
    {{/rows}}